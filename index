<script>
// ===== Activate scenes on scroll =====
const scenes = document.querySelectorAll('.scene');
function checkScene() {
  const triggerBottom = window.innerHeight / 1.2;
  scenes.forEach(scene => {
    const sceneTop = scene.getBoundingClientRect().top;
    if(sceneTop < triggerBottom){
      scene.classList.add('active');
    } else {
      scene.classList.remove('active');
    }
  });
}
window.addEventListener('scroll', checkScene);
checkScene();

// ===== Character interactivity =====
document.querySelectorAll('.character').forEach(char => {
  char.addEventListener('click', () => {
    char.style.transform = 'translateX(200px)';
  });
});

// ===== Adventure objects & coin collection =====
let coins = 0;
const coinDisplay = document.getElementById('coin-counter');
const reward = document.getElementById('reward');
const coinSound = document.getElementById('coin-sound');

document.querySelectorAll('#adventure .objects div').forEach(obj => {
  obj.addEventListener('click', () => {
    coins += 1;
    coinDisplay.textContent = coins;
    obj.style.transform = 'translateY(-50px) rotate(20deg) scale(1.3)';
    obj.style.opacity = 0;
    setTimeout(() => { obj.style.display = 'none'; }, 500);
    coinSound.currentTime = 0;
    coinSound.play();

    // Show reward if all 4 coins collected
    if(coins === 4){
      reward.classList.add('show');
      setTimeout(()=>{ reward.classList.remove('show'); }, 1500);
    }
  });
});

// ===== Breakfast hover effect =====
document.querySelector('.breakfast').addEventListener('mouseover', () => {
  document.querySelector('.breakfast').style.transform = 'scale(1.3)';
});
document.querySelector('.breakfast').addEventListener('mouseout', () => {
  document.querySelector('.breakfast').style.transform = 'scale(1)';
});
</script>

